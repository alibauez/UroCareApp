<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ConsejosAlimentariosPacienteActivity"
    >

    <!-- Incluir barra de herramientas en la parte superior -->
    <include layout="@layout/toolbar_paciente"/>

    <!-- TÃ­tulo de la actividad -->
    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listado_de_consejos_alimentarios"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView donde se muestran los consejos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/consejosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1" /> <!-- Ocupa el espacio restante -->

</LinearLayout>
