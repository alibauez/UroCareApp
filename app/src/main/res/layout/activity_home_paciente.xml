<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <!-- Título principal -->

    <!-- Botones principales -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="¿Qué te gustaría hacer hoy?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPantallaInfo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/primary_claro"
        android:text="Preparación operación"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_med"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCuidados"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/primary_claro"
        android:text="Cuidados postcirugía"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_post"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPantallaInfo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConsejos"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/primary_claro"
        android:text="Consejos alimentarios"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_tip"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCuidados" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHabitos"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/primary_claro"
        android:text="Seguimiento de hábitos"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_hab"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConsejos" />

    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/primary_claro"
        android:text="Calendario"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/calendario"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHabitos" />

    <include layout="@layout/toolbar_paciente"/>


</androidx.constraintlayout.widget.ConstraintLayout>
